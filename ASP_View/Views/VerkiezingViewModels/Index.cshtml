@model System.Data.DataTable

@{
    ViewData["Title"] = "Lijst verkiezingen";
}

<div class="jumbotron">
<h1 class="text-center">@ViewData["Title"]</h1>
</div>  


<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                VerkiezingNaam
            </th>
            <th>
                <a asp-action="AddOrEdit">Toevoegen</a>
            </th>
        </tr>
    </thead>
    <tbody>
@for(int i = 0; i < Model.Rows.Count; i++) {
        <tr>
            <td>
                @Model.Rows[i]["VerkiezingNaam"]
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["VerkiezingID"]">Wijzigen</a> |
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["VerkiezingID"]">Verwijderen</a>
            </td>
        </tr>
}
    </tbody>
</table>
